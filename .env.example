# Google Workspace MCP Server Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 8000)
PORT=8000
WORKSPACE_MCP_PORT=8000

# Base URI for the server (change this to your VPS domain/IP for production)
# For local development: http://localhost
# For VPS deployment: https://your-domain.com or http://your-vps-ip
WORKSPACE_MCP_BASE_URI=http://localhost

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================

# Google OAuth Client Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Default user email (optional - can be overridden per request)
USER_GOOGLE_EMAIL=

# =============================================================================
# MULTI-ACCOUNT CONFIGURATION
# =============================================================================

# Enable multi-account support (true/false)
MULTI_ACCOUNT_ENABLED=true

# Allowed Google accounts (comma-separated list)
# Leave empty to allow any Google account
ALLOWED_GOOGLE_ACCOUNTS=user1@gmail.com,user2@company.com,admin@domain.com

# Account-specific configurations (JSON format)
# Format: {"email": {"scopes": ["scope1", "scope2"], "tools": ["gmail", "drive"]}}
ACCOUNT_CONFIGS={}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for session management (generate a strong random string)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Enable CORS (true/false)
CORS_ENABLED=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://claude.ai

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging (true/false)
FILE_LOGGING_ENABLED=true

# Log file path (relative to app directory)
LOG_FILE_PATH=logs/mcp_server.log

# =============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# =============================================================================

# SSL/TLS Configuration (for HTTPS)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Reverse proxy configuration (if using nginx/apache)
BEHIND_PROXY=false
PROXY_HEADERS=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# CLAUDE WEB INTEGRATION
# =============================================================================

# MCP Server URL for Claude Web (this will be your public URL)
# Format: https://your-domain.com/mcp or http://your-vps-ip:8000/mcp
MCP_SERVER_URL=http://localhost:8000/mcp

# Server name for Claude Web
MCP_SERVER_NAME=Google Workspace MCP

# Server description
MCP_SERVER_DESCRIPTION=Google Workspace integration for Claude - Gmail, Drive, Calendar, Docs, Sheets, and more

# =============================================================================
# TOOLS CONFIGURATION
# =============================================================================

# Default tools to enable (comma-separated)
# Available: gmail, drive, calendar, docs, sheets, chat, forms, slides, tasks
DEFAULT_TOOLS=gmail,drive,calendar,docs,sheets

# Tool-specific configurations
GMAIL_MAX_RESULTS=50
DRIVE_MAX_RESULTS=100
CALENDAR_MAX_RESULTS=50

# =============================================================================
# DATABASE CONFIGURATION (Optional - for persistent sessions)
# =============================================================================

# Database URL (optional - for storing user sessions and preferences)
# DATABASE_URL=sqlite:///./workspace_mcp.db
# DATABASE_URL=postgresql://user:password@localhost/workspace_mcp

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true

# Metrics collection enabled
METRICS_ENABLED=false

# Prometheus metrics endpoint
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
